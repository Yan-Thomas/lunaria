{
  "name": "@lunariajs/core",
  "type": "module",
  "version": "0.0.11",
  "description": "Translation management system for open-source projects",
  "types": "./dist/index.d.ts",
  "bin": {
    "lunaria": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
    },
    "./components": {
        "types": "./dist/dashboard/components.d.mts",
        "default": "./dist/dashboard/components.mjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "keywords": [
    "i18n",
    "translation",
    "dashboard",
    "management"
  ],
  "author": "Yan Thomas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yan-Thomas/lunaria",
    "directory": "packages/core"
  },
  "bugs": "https://github.com/Yan-Thomas/lunaria/issues",
  "scripts": {
    "build": "unbuild",
    "lint": "tsc"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.3",
    "@types/node": "^20.8.9",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0"
  },
  "dependencies": {
    "c12": "^1.5.1",
    "fast-glob": "^3.3.1",
    "jiti": "^1.21.0",
    "lit-html": "^3.0.0",
    "micromatch": "^4.0.5",
    "rehype": "^13.0.1",
    "rehype-format": "^5.0.0",
    "simple-git": "^3.20.0",
    "ultramatter": "^0.0.4",
    "zod": "^3.22.3"
  }
}
